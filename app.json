{
  "expo": {
    "name": "Enviroscan",
    "slug": "enviroscan",
    "owner": "willbullen",
    "version": "1.0.0",
    "orientation": "portrait",
    "privacy": "public",
    "primaryColor": "#1a73e8",
    "icon": "./assets/images/icon.png",
    "scheme": "manus20251226202925",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "extra": {
      "eas": {
        "projectId": "e8eec2ce-70f8-49e7-bf01-2360cef376d6"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.willbullen.enviroscan",
      "infoPlist": {
        "UIBackgroundModes": ["audio", "bluetooth-central"],
        "NSBluetoothAlwaysUsageDescription": "Enviroscan needs Bluetooth to connect to mesh network devices.",
        "NSBluetoothPeripheralUsageDescription": "Enviroscan needs Bluetooth to connect to mesh network devices.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.willbullen.enviroscan",
      "permissions": [
        "POST_NOTIFICATIONS",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "manus20251226202925",
              "host": "*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "react-native-ble-plx",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a2e",
          "dark": {
            "backgroundColor": "#0a0a0a"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
